{{#if model.id}}
    <form {{action "save" model on="change"}}>
      path:{{input value=model.path }}
      name:{{input value=model.name }}
      description:{{input value=model.description }}
    </form>
    
    {{#link-to "resources.delete" model tagName="button"}}Delete Resource{{/link-to}}
    
    {{#if model.methods}}
        <h3>Methods</h3>
        {{#each model.methods as |method|}}
            <form {{action "save" method on="change"}}>
              name:{{input value=method.name }}
              description:{{input value=method.description }}
            </form>
            {{#link-to "methods.delete" method.id tagName="button"}}Delete Method{{/link-to}}
        {{/each}}
    {{/if}}

    {{#each flashMessages.queue as |flash|}}
      {{flash-message flash=flash}}
    {{/each}}
{{/if}}