{{#if model.id}}
    <form {{action "save" model on="change"}}>
      Property:{{input value=model.property }}
      Name:{{input value=model.name }}
      Description:{{input value=model.description }}
    </form>

    {{#link-to "properties.delete" model tagName="button" class="btn btn-danger btn-xs"}}Remove{{/link-to}}

    {{#each flashMessages.queue as |flash|}}
      {{flash-message flash=flash}}
    {{/each}}
{{/if}}
