<ul class="nav nav-pills nav-stacked">
  <li class="active"><a>Entities</a>
      <div class="col-md-4 col-md-offset-8">
        {{#link-to "entities.new" tagName="button"}}New Entity{{/link-to}}
      </div></li>
  {{#each model.entities as |entity|}}
    {{#if entity.id}}
      <li>
        {{#link-to 'entity' entity.id}}
            {{#if entity.name}}
              {{entity.name}}
            {{else}}
              {{entity.id}}
            {{/if}}
        {{/link-to}}
        <button {{action "createProperty" entity}}>New Property</button>
      </li>
    {{/if}}
  {{/each}}
</ul>
