{{#if model.resource.id}}
  <div>
    <h2>Resource</h2>
    <div class="jumbotron">
      <form {{action "save" model.resource on="change"}}>
        path:{{input value=model.resource.path }}
        name:{{input value=model.resource.name }}
        description:{{input value=model.resource.description }}
      </form>
      <div id="res">
        {{#link-to "resources.delete" model.resource tagName="button" class="btn btn-danger btn-xs"}}Remove{{/link-to}}
      </div>
    </div>
  </div>

  <div>
  
    <h3>Methods<button id="mtd" class="btn btn-primary btn-md round "{{action "createMethod" model.resource}}>Add </button>
    </h3> 
          
    <div class="jumbotron">
      {{#if model.resource.methods}}
        {{#each model.resource.methods as |method|}}
          {{show-method model=method entities=model.entities store=store}}
        {{/each}}
      {{else}}
        <p>No methods yet.</p>
      {{/if}}

      {{#each flashMessages.queue as |flash|}}
        {{flash-message flash=flash}}
      {{/each}}
    </div>
  </div>
{{/if}}
