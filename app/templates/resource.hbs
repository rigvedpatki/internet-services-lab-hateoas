{{#if model.resource.id}}
  <div>
    <h2>Resource</h2>
    <div class="jumbotron">
      <form {{action "save" model.resource on="change"}}>
        Path:{{input value=model.resource.path placeholder="e.g. /pet"}}
        Description:{{input value=model.resource.description}}
      </form>
      <div id="res1">
        {{#link-to "resources.delete" model.resource tagName="button" class="btn btn-danger btn-xs"}}Remove{{/link-to}}
      </div>
    </div>
  </div>

  <div>

    <h3>Methods<button id="mtd" class="btn btn-success btn-md round "{{action "createMethod" model.resource}}>Add a {{ownApi}}</button>
    </h3>
      {{#if model.resource.methods}}
        {{#each model.resource.methods as |method|}}
          <div id="sep" class="panel panel-default">
            {{show-method model=method entities=model.entities api=model.apis store=store resource=model.resource routeToNewEntity='routeToNewEntity'}}
          </div>
        {{/each}}
      {{else}}
        <p>No methods yet.</p>
      {{/if}}

      {{#each flashMessages.queue as |flash|}}
        {{flash-message flash=flash}}
      {{/each}}
    </div>
{{/if}}
